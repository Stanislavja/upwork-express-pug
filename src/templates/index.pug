doctype html
html
    head
        style
            include ./style.css
body
    button(type='button' id='action-button')
        | Show next item
    div#container
        each book, index in bookStore
            if index
                ul.hidden
                    li= book.title
                    li= book.author
                    li= book.pages
                    li= book.year
            else
                ul
                    li= book.title
                    li= book.author
                    li= book.pages
                    li= book.year
    script
        include ./script.js
