doctype html
html
    head
        style
            include ./style.css
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css' rel='stylesheet' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js' crossorigin='anonymous')
body
    include modal
    button(type='button' id='action-button')
        | Show next item
    div#container
        each book, index in bookStore
            if index
                div.flex.hidden
                    ul
                        li= book.title
                        li= book.author
                        li= book.pages
                        li= book.year
                        if book.popup
                            li.popup= book.popup
                        li.points=book.points
                    input(type='checkbox')
            else
                div.flex
                    ul
                        li= book.title
                        li= book.author
                        li= book.pages
                        li= book.year
                        if book.popup
                            li.popup= book.popup
                        li.points=book.points
                    input(type='checkbox')
    script
        include ./script.js
